<div class="jumbotron text-center">
    <h1>Copy Everything</h1>

    <br/><br/>

    <div class="form-horizontal form-group form-group-lg row">
      <div class="col-xs-offset-3 col-xs-6">
	{{paper-input type="email" label="Email" value=username icon="person" icon-class="name" customValidation=email_validation required=true}}
	{{paper-input type="password" label="Password" value=password icon="lock" icon-class="name" customeValidation=pass_validation required=true}}
      </div>
      <div class="col-xs-offset-3"></div>
      <div class="col-xs-offset-3 col-xs-6">
	<button class="btn btn-primary btn-lg btn-block" disabled={{is_disabled}} {{action 'login'}}>Login</button>
      </div>
    </div>

    <div class="row">
     {{#if message.type}}
     	   <div class="alert alert-{{message.type}}">{{message.text}}</div>
     {{/if}}
     {{#if loading}}
     	 <div class="center-block width100 text-center">
              {{paper-progress-circular}}
	      <p class="text-center">Loading...</p>
	 </div>
     {{/if}}
    </div>
</div>
